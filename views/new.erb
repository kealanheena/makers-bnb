<form action='/new' method='post'>
  <div class="container">
    <div class="row">
      <div class="row">
        <div class="col-6">
          <label for="name" class="col-sm-2">Name: </label>
          <input id="name" class="form-control col-sm-10" type='text' name='name' placeholder="name" required>
        </div>
        <div class="col-6">
          <label for="price" class="col-sm-2">Price Per Night(Â£): </label>
          <input id="price" class="form-control col-sm-10" type='number' name='price' placeholder="price" min='1' required>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <label for="start" class="col-sm-2">Start Date: </label>
          <input id="start" class="form-control col-sm-10" type='date' name='starting' required>
        </div>
        <div class="col-6">
          <label for="end" class="col-sm-2">End Date: </label>
          <input id="end" class="form-control col-sm-10" type='date' name='ending' required>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <label for="description" class="col-sm-2">Description: </label>
          <textarea id="description" class="form-control col-sm-10" type='text' name='description' placeholder="Tell us a bit about your rental ..." required></textarea>
        </div>
      </div>
    </div>
    <input class="form-control btn btn-primary" type='submit' value='Submit'>
  </div>

</form>
